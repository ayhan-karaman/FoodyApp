@model List<ResultSliderDto>

@{
    ViewData["Title"] = "Slider List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Home</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="/">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a asp-action="Index">Sliders</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a asp-action="Index">Slider List</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <div class="card-title">Slider List Panel</div>
                        <a asp-action="CreateSlider" class="btn btn-success">Add New Slider</a>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3 table-hover text-center">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Image Url</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="EditSlider" asp-route-id="@item.Id"
                                                    class="btn btn-warning">Update</a>
                                                <a class="btn btn-danger" asp-action="DeleteSlider"
                                                    asp-route-id="@item.Id">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>